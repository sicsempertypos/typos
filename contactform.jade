      <!-- Sorting -->
      <script type="text/javascript" id="js">
      function validate(contactform_fs) {
      fail = validateName(contactform_fs.username.value)
      fail += validateEmail(contactform_fs.email.value)
      if (fail == '') return true
      else {alert(fail); return false}
      }
      function validateName(field) {
      return (field == "") ? "No User Name was entered.\n" : ""
      }
      function validateEmail(field) {
      if (field == "") return "No Email was entered.\n"
      else if (/[a-zA-Z0-9_-])/.test(field))
      return "Only a-z, A-Z, 0-9, - and _ are allowed in Usernames.\n"
      return ""
      }
